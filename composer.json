{
    "name": "liucf/neon-sdk-php",
    "version": "1.0.0",
    "description": "Neon PHP library",
    "keywords": ["php", "neon", "sdk", "api", "client"],
    "homepage": "https://neon.com/",
    "type": "library",
    "require": {
        "php": "^8.2.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "mockery/mockery": "^1.6",
        "symfony/var-dumper": "^7.3",
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.1",
        "pestphp/pest-plugin-type-coverage": "^3.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Neon\\": "src/"
        },
        "files": [
            "src/Neno.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/Fixtures/Fixtures.php"
        ]
    },
    "authors": [
        {
            "name": "Michael Liu",
            "email": "lcf_boy@hotmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
     "scripts": {
        "lint": "pint -v --parallel",
        "test:lint": "pint --test -v --parallel",
        "test:types": "phpstan analyse --ansi",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:unit"
        ]
    }
}
